<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        tools:context="com.app.boxee.shopper.fragments.ProfileFragment">

        <EditText
            android:id="@+id/fName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="" />

        <EditText
            android:id="@+id/lName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fName"
            android:hint="" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lName"
            android:hint="" />

        <LinearLayout
            android:id="@+id/primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/code_spinner"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ccp_down_arrow"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_flag"
                android:focusable="false"
                android:text="+971" />

            <EditText
                android:id="@+id/input_num_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="9200 09191"
                android:inputType="number"
                android:maxLength="10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/primary"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/code_spinner_sec"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ccp_down_arrow"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_flag"
                android:focusable="false"
                android:text="+966" />

            <EditText
                android:id="@+id/input_num_et_sec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="9200 09191"
                android:inputType="number"
                android:maxLength="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondary"
            android:orientation="vertical">

            <Button
                android:id="@+id/submitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_check_black_24dp"
                android:paddingEnd="50dp"
                android:paddingStart="50dp"
                android:text="" />

            <Button
                android:id="@+id/cancelbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_secondary"
                android:backgroundTint="@color/dark_red"
                android:drawableStart="@drawable/ic_clear_black_24dp"
                android:paddingEnd="50dp"
                android:paddingStart="50dp"
                android:text="" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
