<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/heading"
        style="@style/TextHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/colorAccent"


        />

    <TextView
        android:id="@+id/address"
        style="@style/TextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:text="AstroLabs, Cluster R, Retail LevelAstroLabs, Cluster R, Retail Level"
        android:textColor="@color/text_inactive"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/phone"
        style="@style/TextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_inactive"
        android:text="09843322729120"
        android:visibility="gone"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/ship_add"
        style="@style/TextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/text_inactive"
        android:textSize="14sp" />

    <Button
        android:id="@+id/makeDefault"
        style="@style/Button_rounded_default"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/phone"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/ic_btn_default"
        android:gravity="center_vertical|center_horizontal"
        android:drawablePadding="10dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:text="Make Default" />

    <ImageView
        android:id="@+id/location_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_marker_card" />

    <ImageView
        android:id="@+id/edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"

        android:src="@drawable/ic_edit_card" />
    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/edit_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_btn_card" />

</RelativeLayout>